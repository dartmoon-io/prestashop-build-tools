{
    "name": "dartmoon/prestashop-build-tools",
    "description": "Set of tools to build PrestaShop Modules",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Dartmoon",
            "email": "hello@dartmoon.io",
            "homepage": "https://dartmoon.io"
        },
        {
            "name": "Alessandro Pasqualini",
            "email": "alessandro@dartmoon.io",
            "homepage": "https://dartmoon.io"
        }
    ],
    "require": {
        "adbario/php-dot-notation": "^2.2",
        "humbug/php-scoper": "^0.14.0",
        "prestashop/header-stamp": "^2.0",
        "symfony/console": "^4",
        "symfony/filesystem": "^4",
        "symfony/finder": "^4",
        "symfony/process": "^4"
    },
    "require-dev": {
        "symfony/var-dumper": "^5.2"
    },
    "autoload": {
        "psr-4": {
            "Dartmoon\\PrestaShopBuildTools\\": "src/"
        }
    },
    "bin": [
        "bin/prefix-vendor",
        "bin/build-module",
        "bin/header-stamp"
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    }
}
